{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@app/*": [
                "./src/app/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@images/*": [
                "./src/assets/images/*"
            ],
            "@svg/*": [
                "./src/assets/svg/*"
            ],
            "@json/*": [
                "./src/assets/json/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ],
            "@hlibs/*": [
                "./src/lib/hlibs/*"
            ],
            "@redux/*": [
                "./src/redux/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@views/*": [
                "./src/views/*"
            ],
            "@modals/*": [
                "./src/modals/*"
            ],
            "@template/*": [
                "./src/template/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "public"
    ]
}