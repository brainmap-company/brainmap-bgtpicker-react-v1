{
    "compilerOptions": {
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "noEmit": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@view/*": ["src/views/*"],
            "@components/*": ["src/components/*"],
            "@images/*": ["src/assets/images/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
